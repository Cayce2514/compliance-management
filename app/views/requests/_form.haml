-content_for :modal_title do
  -if f.object.new_record?
    Create a new request
  -else
    Edit request

-if !f.object.new_record?
  -content_for :modal_delete_path, delete_flow_request_path(f.object)

.row-fluid
  =wrapped_text_field f, :span2, :pbc_control_code, :placeholder => 'Control Code', :label_name => 'PBC Control Code'
  .span2
    %label GRC Control Code
    .item.i-control.has-link FIXME
  =wrapped_text_field f, :span2, :company_responsible, :placeholder => 'LDAP ID', :label_name => 'Company Contact'
  =wrapped_text_field f, :span2, :auditor_responsible, :placeholder => 'Name', :label_name => 'Auditor Contact'
  =wrapped_date_field f, :span2, :date_requested, :class => 'date', :placeholder => 'MM/DD/YYYY', :label_name => 'Date Requested'
  =wrapped_select f, :span2, :status, ['Draft', 'Waiting Compliance', 'Waiting Auditors', 'Completed'], :selected => (f.object.status), :label_name => 'Status'

.row-fluid
  =wrapped_text_area f, :span6, :pbc_control_desc, :class => 'double wysihtml5', :placeholder => 'Enter description here', :wrapper_div_class => 'wysiwyg-area', :label_name => 'Control Description from PBC List'
  =wrapped_text_area f, :span6, :request, :class => 'double wysihtml5', :placeholder => 'Enter request here', :wrapper_div_class => 'wysiwyg-area'
.row-fluid
  =wrapped_text_area f, :span6, :notes, :class => 'double wysihtml5', :placeholder => 'Enter notes here', :wrapper_div_class => 'wysiwyg-area'
  =wrapped_text_area f, :span6, :test, :class => 'double wysihtml5', :placeholder => 'Enter test here', :wrapper_div_class => 'wysiwyg-area'

%br

=render :partial => "shared/wysihtml5"
