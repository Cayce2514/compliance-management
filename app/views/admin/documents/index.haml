.block
  .secondary-navigation
    %ul.wat-cf
      %li.first.active=link_to pat(:list), documents_path
      %li=link_to pat(:new), new_document_path
  .content
    %h2.title
      =pat(:all)
      =mt(:documents)
    .inner
      %table.table
        %tr
          %th.first=mat(:document, :title)
          %th=mat(:document, :link)
          %th=mat(:document, :descriptor)
          %th=mat(:document, :updated_at)
          %th.last!="&nbsp;"
        -@documents.each do |document|
          %tr
            %td.first=link_to h(document.title), edit_document_path(document)
            %td=link_to h(document.link.to_s), document.link.to_s
            %td
              =link_to document.document_descriptor.display_name,
                edit_document_descriptor_path(document.document_descriptor) rescue "-"
            %td=display_time(document.updated_at)
            %td.last
              =button_to pat(:edit), edit_document_path(document), :method => :get, :class => :button_to
      .actions-bar.wat-cf
        .actions!="&nbsp;"

-render_for :sidebar, :partial => "base/sidebar"
