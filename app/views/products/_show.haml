-content_for :widget_title do
  Product Information

-content_for :widget_help, 'product_info'

.information
  .toolbar-widget

  %hr.hr-widget

  .row-fluid
    .span12
      .span4
        %label Code
        %input.inputtext-small{:type => "text", :disabled => "disabled", :value => product.slug}
      .span4
        %label Type
        %input.inputtext-small{:disabled => "disabled", :type => "text", :value => product.type && product.type.title}
  .row-fluid
    .span12
      %label Full Title
      %input.span12{:disabled => "disabled", :type => "text", :value => product.title}
  .row-fluid
    .span4
      %label Version
      %input.inputtext-small{:disabled => "disabled", :type => "text"}
  .row-fluid
    .span12
      %label Description
      %textarea#textarea{:disabled => "disabled", :rows => 3}=product.description

%hr.hr-widget

.row-fluid
  .span12
    =render :partial => 'documents/object_list',
            :locals  => { :object => product }

%hr.hr-widget

.row-fluid
  .span12
    =render :partial => 'people/object_list',
            :locals  => { :object => product }

%hr.hr-widget

.row-fluid
  .span6.nominheight
    %label.fltlft
      %strong> Created: #{product.created_at.strftime("%m/%d/%y")}
  .span6.nominheight
    %label.fltrt
      %strong> Updated: #{product.updated_at.strftime("%m/%d/%y")}

