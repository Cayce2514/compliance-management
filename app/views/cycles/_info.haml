-content_for :widget_title do
  Audit Info

-content_for :widget_id, "cycle_info_widget"

-content_for :widget_buttons do
  -if has_feature?(:BETA)
    .filter
      .row-fluid
        .span12
          .pull-right
            %a.btn.btn-warning.actionbutton
              Audit Dashboard
            %a.btn.btn-warning.actionbutton
              Invite Auditors

-content_for :widget_help, 'cycle_info'

%ul.info-list
  %li.float-element
    %label
      Audit Firm
    %span
      =cycle.audit_firm
  %li.float-element
    %label
      Audit Lead
    %span
      =cycle.audit_lead
  %li.float-element
    %label
      Created by
    %span
      =cycle.modified_by.nil? ? 'unknown' : cycle.modified_by.display_name
  %li
    %label
      Description
    %span
      =display_as_html cycle.description

%section.footer
  .row-fluid
    .span6
      %p.footer-left
        Created: #{cycle.created_at.strftime("%m/%d/%y")}
    .span6
      %p.footer-right
        Updated: #{cycle.updated_at.strftime("%m/%d/%y")}
