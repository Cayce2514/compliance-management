  %a.widgettextbtn{ :href => new_flow_section_path(:'section[program_id]' => control.program_id), :'data-toggle' => 'modal-ajax-form', :'data-modal-reset' => 'reset', :'data-form-target' => 'refresh', :title => 'Create New Section' } Add Section
