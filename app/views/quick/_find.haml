-content_for :widget_title do
  Quick Find

-content_for :widget_buttons do
  %input.ui-corner-all.widgetsearch.clear-value(type='text' placeholder='Search')

-content_for :widget_help, 'quick_find'

.tabbable#quick_find
  %ul.nav.nav-tabs
    %li=link_to 'Controls', '#controls', :data => { :'tab-href' => flow_controls_path(:quick => true), :toggle => 'tab' }
    %li=link_to 'Biz Processes', '#biz_processes', :data => { :'tab-href' => flow_systems_path(:quick => true, :is_biz_process => true), :toggle => 'tab' }
    %li=link_to 'Systems', '#systems', :data => { :'tab-href' => flow_systems_path(:quick => true), :toggle => 'tab' }
    %li=link_to 'Products', '#products', :data => { :'tab-href' => flow_products_path(:quick => true), :toggle => 'tab' }
    %li=link_to 'Risks', '#risks', :data => { :'tab-href' => flow_risks_path(:quick => true), :toggle => 'tab' }
  .tab-content
    #controls.tab-pane
    #biz_processes.tab-pane
    #systems.tab-pane
    #products.tab-pane
    #risks.tab-pane

