.block
  .secondary-navigation
    %ul.wat-cf
      %li.first=link_to pat(:list), business_areas_path
      %li=link_to pat(:new), new_business_area_path
      %li.active=link_to pat(:edit), edit_business_area_path(@business_area)
  .content
    %h2.title
      =pat(:edit)
      =mt(:business_area)
    .inner
      =form_for @business_area, :method => :put, :html => {:class => :form} do |f|
        =render :partial => "admin/business_areas/form", :locals => { :f => f }

/-content_for :sidebar, partial("base/sidebar")
