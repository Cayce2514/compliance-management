-content_for :widget_title do
  PBC Lists

-content_for :widget_help, 'cycle_pbclist'

-content_for :widget_buttons do
  -if cycle.pbc_lists.count == 0
    %a.widgetbtn{ :href => new_flow_pbc_list_path(:'pbc_list[audit_cycle_id]' => cycle.id), :'data-toggle' => 'modal-ajax-form', :'data-modal-reset' => 'reset', :'data-form-target' => 'refresh', :'data-modal-class' => 'modal-wide'}
      %i.grcicon-add

.item-titles
  .row-fluid
    .span3
      Date
    .span4
      Firm
    .span4
      PBC Title
    .span1{"rel" => "tooltip", "data-placement" => "top", "title" => "Number of control assessments", :style => "text-align:center" }="#"
      



-cycle.pbc_lists.each do |pbc_list|
  %a.item-link{ :href => flow_pbc_list_path(pbc_list.id) }
    .item
      .row-fluid
        .span3=(pbc_list.list_import_date && pbc_list.list_import_date.strftime('%m/%d/%Y')) || '&nbsp'.html_safe
        .span4=pbc_list.audit_firm || '&nbsp;'.html_safe
        .span4=pbc_list.title || '&nbsp;'.html_safe
        .span1{:style => "text-align:center"}="6"
