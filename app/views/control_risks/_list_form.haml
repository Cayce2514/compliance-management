-if params[:risk_id].present?
  .row-fluid
    .span6
      %h4
        Add Control
        %a.widgetbtn.widgetbtnselector{ :href => new_flow_control_path, :'data-toggle' => 'modal-ajax-listnewform', :'data-selector-target' => '.source, .target', :'data-modal-class' => 'modal-wide' }
          %i.grcicon-add
        .pull-right
          %input.widgetsearch{:type => "text", :placeholder => "Search Controls"}

      .filter-block
        .row-fluid
          .span12
            .tabbable.tabs-left
              .tab-content
                #category1.tab-pane.active
                  .people-list
                    %ul.source{ :'data-list-data-href' => flow_controls_path(:format => :json), :'data-template-id' => 'control_option' }
    .span6
      %h4
        Controls for this Risk
      .people-list.currentlist
        %ul.target{ :'data-list-data-href' => flow_control_risks_path(:risk_id => object.id, :format => :json), :'data-selector-target' => '.source, .target', :'data-template-id' => 'control_selected'}
-else
  .row-fluid
    .span6
      %h4
        Add Risk
        %a.widgetbtn.widgetbtnselector{ :href => new_flow_risk_path, :'data-toggle' => 'modal-ajax-listnewform', :'data-selector-target' => '.source, .target', :'data-modal-class' => 'modal-wide' }
          %i.grcicon-add
        .pull-right
          %input.widgetsearch{:type => "text", :placeholder => "Search Risks"}

      .filter-block
        .row-fluid
          .span12
            .tabbable.tabs-left
              .tab-content
                #category1.tab-pane.active
                  .people-list
                    %ul.source{ :'data-list-data-href' => flow_risks_path(:format => :json), :'data-template-id' => 'risk_option' }
    .span6
      %h4
        Risks implementing this Control
      .people-list.currentlist
        %ul.target{ :'data-list-data-href' => flow_control_risks_path(:control_id => object.id, :format => :json), :'data-selector-target' => '.source, .target', :'data-template-id' => 'risk_selected'}

