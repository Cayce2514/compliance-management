-content_for :widget_title do
  Systems that rely on this System

-content_for :widget_help, 'system_super_systems'

-content_for :widget_buttons do
  %input.ui-corner-all.widgetsearch.clear-value(type='text' placeholder='Search')

.description
  %ul.slugtree
    -system.super_systems.all.each do |item|
      %li.slot.singleControlSlot.accordian-toggle( data-toggle='collapse' href="#super-system-#{item.id}" data-id="#{item.id}" )
        .expander
        %a.btn.btn-blue.fltrt{ :href => flow_system_path(item) }
          Go
        %span.prefix
          =item.slug
        =item.title

        .row-fluid-slotcontent.collapse{ :id => "super-system-#{item.id}" }
          =item.description
          %a.btn.btn-blue.fltrt{ :href => edit_flow_system_path(item), :'data-toggle' => 'modal-ajax-form', :'data-modal-reset' => 'reset', :'data-form-target' => 'refresh' }
            Edit
