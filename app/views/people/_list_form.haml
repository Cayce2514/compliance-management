-content_for :modal_title do
  %h1 Add Person

.row-fluid
  .span6
    %h4
      Add People
      %a.btn.btn-blue.addbtn.fltrt.new{ :href => new_flow_person_path, :'data-toggle' => 'modal-ajax-listnewform', :'data-list-target' => '.source, .target' }
        %i.icon-user.icon-white
        New Person

    .filter-block
      .row-fluid
        .span12
          .modal-search.clearfix
            .btn-group.closed
              -#%a#filterButton.btn.dropdown-toggle{"data-toggle" => "dropdown"}
                GRC Directory
                %span.caret
              -#%ul.dropdown-menu
                %li
                  %a#showCompanyDirectory{:href => "#", :'data-toggle' => ''}
                    Company Directory
                %li
                  %a#showGRCDirectory{:href => "#", :'data-toggle' => ''}
                    GRC Directory

              .pull-right
                %input.widgetsearch{:type => "text", :placeholder => "Search GRC Directory"}
          -#.additional-filters.filter-group
            .row-fluid
              .span4
                %label Name
                %input.span12{:type=>"text", :placeholder => "enter name"}
              .span4
                %label Org. group
                %input.span12{:type=>"text", :placeholder => "example: IT"}
              .span4
                %label Title
                %input.span12{:type=>"text", :placeholder => "example: Compliance"}

          .tabbable.tabs-left
            .tab-content
              #category1.tab-pane.active
                .people-list.short
                  %script{ :type => 'text/html' }
                    %li{ :'data-id' => '<%= person.id %>', :'data-name' => '<%= person.name %>', :'data-company' => '<%= person.company %>' }
                      .row-fluid
                        .span8
                          %span.company <%= person.company %>
                          %span.name <%= person.name %>
                        .span4.actions
                          %a.btn.btn-mini.pull-right.add-me{:href => "#", :'data-toggle' => 'selector-list-select'}
                            %i.grcicon-chevron-right
                          %a.btn.btn-mini.pull-right{:href => edit_flow_person_path('<%=person.id%>'), :'data-toggle' => 'modal-ajax-listeditform', :'data-list-target' => '#listPersonList, #listObjectPersonList' }
                            %i.gcmsicon-edit-grey
                  %ul.source{ :'data-list-data-href' => flow_people_url }

  .span6
    %h4 Roles for this system

    .people-list.currentlist
      %script{ :type => 'text/html', :'data-role' => '', :'data-start_date' => '', :'data-stop_date' => '' }
        %li{ :'data-id' => '<%= person.id %>', :'data-name' => '<%= person.name %>', :'data-company' => '<%= person.company %>' }
          .row-fluid
            .span6
              %span.company <%= person.company %>
              %span.name <%= person.name %>
            .span6.actions
              %input{ :type => 'hidden', :name => 'items[<%= person.id %>][id]', :value => '<%= person.id %>' }
              %a.widgetbtn.pull-right{ :href => '#', :'data-toggle' => 'selector-list-remove' }
                %i.icon-minus-sign
              %a.widgetbtn.pull-right{ :href => edit_flow_person_path('<%=person.id%>'), :'data-toggle' => 'modal-ajax-listeditform', :'data-list-target' => '#listPersonList, #listObjectPersonList' }
                %i.gcmsicon-edit-grey
              .btn-group.inline
                %a.span7.btn.btn-success.btn-mini.dropdown-toggle.nominheight.halfopacity.fltrt{"data-toggle" => "dropdown"}
                  <%= (role && role.length > 0) ? role[0].toUpperCase() + role.substr(1) : "Select Role" %>
                %input{ :type => 'hidden', :name => 'items[<%= person.id %>][role]', :value => '<%= role %>' }
                %ul.dropdown-menu{ :'data-toggle' => 'dropdown-select-list' }
                  %li
                    %a#makeAccountable{ :'data-value' => 'accountable', :href => '#' }
                      is Accountable for
                  %li
                    %a#makeResponsible{ :'data-value' => 'responsible', :href => '#' }
                      is Responsible for
              %span.help-inline
          .row-fluid
            .span4
            .span4
              %label Start Date (Optional)
              %input.span12.date{:type => "text", :placeholder => "MM/DD/YYYY", :name => 'items[<%= person.id %>][start_date]', :'data-toggle' => 'datepicker', :value => '<%= this.format_date(start_date) %>'}
            .span4
              %label Stop Date (Optional)
              %input.span12.date{:type => "text", :placeholder => "MM/DD/YYYY", :name => 'items[<%= person.id %>][stop_date]', :'data-toggle' => 'datepicker', :value => '<%= this.format_date(stop_date) %>'}

      %ul.target{ :'data-list-data-href' => flow_object_people_path(:object_type => object.class.name, :object_id => object.id) }

:javascript
  $('.date').datepicker();
