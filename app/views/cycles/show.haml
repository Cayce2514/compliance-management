-content_for :header do
  %ol#breadcrumb
    %li
      %a{ :href => flow_program_path(@cycle.program) } #{@cycle.program.title}
    %li AUDIT CYCLE
  .location#pageTitle Audit Cycle for #{@cycle.program.title}

-content_for :page_help, 'cycle'

-content_for :subheader_extras do
  .btn-group.fltrt
    %a.btn.btn-warning{ :'data-toggle' => 'modal-form', :href => '#edit-cycle-modal' }
      Edit Cycle

.row-static
  .doubleColumn
    .doubleWide.halfHeight
      =render :partial => 'cycles/show',
              :layout => 'layouts/widget_box',
              :locals => { :cycle => @cycle }

#edit-cycle-modal.modal.fade
  =form_for @cycle, :url => flow_cycle_path(@cycle), :method => :put, :remote => true, :html => {:class => :form} do |f|
    .modal-header
      %a.close{ "data-dismiss" => "modal" } x
      %h1 Edit Audit Cycle
    .modal-body
      =render :partial => 'cycles/form',
              :locals  => { :f => f }
    .modal-footer
      .row-fluid
        %nav.fltlft.txtlft.span3
          =f.submit pat(:cancel), :type => 'reset', :class => 'btn btn-large btn-info'
        %nav.fltrt.txtrt.span3  
          =f.submit pat(:save), :class => 'btn btn-large btn-success'
        
