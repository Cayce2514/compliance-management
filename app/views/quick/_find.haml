-content_for :widget_title do
  Quick Find

-content_for :widget_buttons do
  %input.ui-corner-all.widgetsearch.clear-value(type='text' value='Search...')

.tabbable#quick_find
  %ul.nav.nav-tabs
    %li=link_to 'Controls', '#controls', :data => { :'tab-href' => quick_controls_path, :toggle => 'tab' }
    %li=link_to 'Sections', '#sections', :data => { :'tab-href' => quick_sections_path, :toggle => 'tab' }
    %li=link_to 'Programs', '#programs', :data => { :'tab-href' => quick_programs_path, :toggle => 'tab' }
  .tab-content
    #controls.tab-pane
    #sections.tab-pane
    #programs.tab-pane

