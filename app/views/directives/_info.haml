-instance = directive

-content_for :widget_title do
  Directive Info

-content_for :widget_help, 'program_info'

-content_for :widget_id, 'program_info_widget'

%ul.info-list
  %li.float-element
    %label
      Code
    %span
      %strong=instance.slug
  %li.float-element
    %label
      Full Title
    %span
      %strong=instance.title
  %li.float-element
    %label
      Kind
    %span
      %i.grcicon-directive-black
      =instance.kind
  %li
    %label
      Description
    -if instance.description != ""
      =display_as_html instance.description
    -else
      .rtf
        %p.no-data no description available
  -if instance.url != ""
    %li.float-element
      %label
        Direct link
      %span
        =link_to(instance.url, instance.url, :target => "_blank", :class => "inner-element")

%section.footer
  .row-fluid
    .span6
      %p.footer-left
        Created: #{instance.created_at.strftime("%m/%d/%y")}
