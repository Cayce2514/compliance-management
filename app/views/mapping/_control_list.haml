-content_for :widget_title do
  #{title_prefix} Controls

-content_for :widget_help, (control_type == 'regulation' ? 'mapping_rcontrols' : 'mapping_ccontrols' )

-content_for :widget_buttons do
  .filter
    .row-fluid
      .span6
        %input.ui-corner-all.widgetsearch-tocontent(type='text' placeholder='Search')

      .span6
        .pull-right
          %a.btn.clearselection{ :href => "javascript://"}
            Reset
          -if control_type == 'regulation'
            %a.btn.btn-add{ :href => new_flow_control_path(:'control[directive_id]' => @directive.id, :company => false), :'data-toggle' => 'modal-ajax-form', :'data-modal-reset' => 'reset', :'data-modal-class' => 'modal-wide', :title => 'Create New Regulation Control' }
              %i.grcicon-add
              New
          -else
            %a.btn.btn-add{ :href => new_flow_control_path(:company => true), :'data-toggle' => 'modal-ajax-form', :'data-modal-reset' => 'reset', :'data-modal-class' => 'modal-wide', :title => 'Create New Company Control' }
              %i.grcicon-add
              New

.spinner
-#cache({:action => 'show', :action_suffix => "#{control_type}_controls_#{@search}"}, :expires_in => @ttl || 300) do
  =render :partial => 'control_list_content', :locals => { :controls => controls, :control_type => control_type }
