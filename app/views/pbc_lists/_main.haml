
%header.header
  .row-fluid
    .span10
      %h2
        Audit Start Date:
        =pbc_list.audit_cycle.start_at && pbc_list.audit_cycle.start_at.strftime('%m/%d/%Y')
    .span2
      %a.pull-right.btn.btn-mini{:href => "/help/pbc_list", :'data-toggle' => 'modal-ajax', :title => "Help - What is this?"}
