-if control
  %div.description{:id => "selected_#{control_type}", :oid => control.id}
    %div
      %div
        %span.prefix
          =control.slug
        =control.title
      %div
        =control.description
-else
  %div.description{:id => "selected_#{control_type}"}
    %div
      Nothing selected.

:javascript
  $(document).ready(function(){
    update_map_buttons();
  });
