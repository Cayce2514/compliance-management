-model_name = controller_name.singularize.underscore
-model_title = model_name.titleize
-instance = instance_variable_get("@" + model_name)

-content_for :tooltip_title do
  %h3 #{model_title} Information

%h4 
  =model_title
  \:
  =instance.title
  \|
  =instance.slug
%br
%h4 Description
.rtf
  =display_as_html instance.description


.tooltip-footer
  .row-fluid
    .span6
      %strong Created:
      =display_time(instance.created_at)
    .span6
      %strong Updated:
      =display_time(instance.updated_at)
