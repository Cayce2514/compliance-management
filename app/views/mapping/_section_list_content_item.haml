.row-fluid
  %a.span9.slot.regulationslot.toggle.selector.collapsed{ :href => mapping_selected_section_path(section), :'data-remote' => "true" }
    %span.prefix=section.compact_slug
    =section.title
  -controls = section.preloaded_linked_controls
  -status_class = (controls.empty? && !section.na?) ? 'statusred' : 'statusyellow'
  %a.span3.attached.controllistRM{ :class => status_class, :href => mapping_section_dialog_path(section)}
    -if !controls.empty?
      %ul.spannomargin{ :title => controls.map(&:slug).join(", ") }
        %li
          %strong=controls.size
          \:
        -controls.each do |control|
          %li
            =control.slug
    -if section.na?
      N/A
    -elsif controls.empty?
      %strong 0
