-# locals: risk, risky_attribute

-model_name = controller_name.singularize
-model_title = controller_name.singularize.titleize
-instance = instance_variable_get("@" + model_name)
-content_for :widget_title do
  #{model_name.pluralize.titleize}, Processes, Controls

-content_for :widget_help, "#{model_name}_main"

-#content_for :widget_buttons do
  %input.ui-corner-all.widgetsearch{:placeholder => "Search", :type => "text"}/

.row-fluid
  .span12.captionbox
    %a.widgetbtn.pull-right{ :href => list_edit_flow_risk_risky_attributes_path(:risk_id => risk.id), :'data-toggle' => 'modal-ajax-relationship-selector', :'data-modal-reset' => 'reset', :'data-list-target' => 'refresh', :rel => 'tooltip', :title => 'Link risky attributes to this risk', :'data-modal-class' => 'modal-wide' }
      %i.grcicon-link
    %h4
      Risky Attributes associated with this Risk

%ul.slotlist
  -risky_attributes.each_with_index do |risky_attribute, i|
    -id_prefix = "risky_attribute-#{i}"
    -summary_toggle_target = "#{id_prefix}-summary"

    %li
      .row-fluid
        .slot.span12.processslot
          .slottitle.span8.toggle{"data-target" => "##{summary_toggle_target}", "data-toggle" => "collapse"}
            .expander
            %span.prefix=risky_attribute.slug
            =risky_attribute.title
          -if has_feature? :BETA
            .slotcolumn.span2
              .halfopacity.span12.nominheight.btn.btn-slotcolumn Data Integrity
            .slotowner.span1
              %a.slotowner{:href => "#"} Owner Joe
          .slotactions.pull-right
            %a.btn.btn-mini.btn-blue.halfopacity{ "data-target" => "##{summary_toggle_target}", "data-toggle" => "collapse", "rel" => "tooltip", "data-placement" => "left", "title" => "More" }
              %i.grcicon-more

      .row-fluid.collapse{ :id => summary_toggle_target }
        .span12.morewell.statusblue.nominheight
          .slotcontent.span12
            %ul.contentactions.pull-right
              %li
                %a.btn.btn-mini.halfopacity{ "rel" => "tooltip", "data-placement" => "left", "title" => "Go to this object's page", :href => flow_risky_attribute_path(risky_attribute.id) }
                  %i.grcicon-arrowright-black
            =risky_attribute.description


