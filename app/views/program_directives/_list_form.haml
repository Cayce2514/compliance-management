-if params[:program_id].present?
  .row-fluid.modal-source
    .span6
      .row-fluid
        .span7
          %h3
            Add Directive
            %a.widgetbtn.widgetbtnselector.btn.btn-add{ :href => new_flow_directive_path, :'data-toggle' => 'modal-ajax-listnewform', :'data-selector-target' => '.source, .target', :'data-modal-class' => 'modal-wide' }
              %i.grcicon-add
        .span5
          %input.widgetsearch.input-block-level{:type => "text", :placeholder => "Search Directives"}

      .filter-block
        .row-fluid
          .span12
            .tabbable.tabs-left
              .tab-content
                #category1.tab-pane.active
                  .people-list
                    %ul.source{ :'data-list-data-href' => flow_directives_path(:format => :json), :'data-template-id' => 'directive_option' }
    .span6
      %h3
        Directives for this Program
      .people-list.currentlist
        %ul.target{ :'data-list-data-href' => flow_program_directives_path(:program_id => object.id, :format => :json), :'data-selector-target' => '.source, .target', :'data-template-id' => 'directive_selected'}
-else
  .row-fluid.modal-source
    .span6
      .row-fluid
        .span7
          %h3
            Add Program
            %a.widgetbtn.widgetbtnselector.btn.btn-add{ :href => new_flow_program_path, :'data-toggle' => 'modal-ajax-listnewform', :'data-selector-target' => '.source, .target', :'data-modal-class' => 'modal-wide' }
              %i.grcicon-add
        .span5
          %input.widgetsearch.input-block-level{:type => "text", :placeholder => "Search Programs"}

      .filter-block
        .row-fluid
          .span12
            .tabbable.tabs-left
              .tab-content
                #category1.tab-pane.active
                  .people-list
                    %ul.source{ :'data-list-data-href' => flow_programs_path(:format => :json), :'data-template-id' => 'program_option' }
    .span6
      %h3
        Programs for this Directive
      .people-list.currentlist
        %ul.target{ :'data-list-data-href' => flow_program_directives_path(:directive_id => object.id, :format => :json), :'data-selector-target' => '.source, .target', :'data-template-id' => 'program_selected'}

