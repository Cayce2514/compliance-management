-content_for :modal_title do
  -if f.object.new_record?
    Create New Audit Cycle
  -else
    Edit Audit Cycle

-if !f.object.new_record?
  -content_for :modal_delete_path, delete_flow_cycle_path(f.object)

-if f.object.program_id.nil?
  .row-fluid
    .span4
      =f.collection_select :program_id, Program.all, :id, :display_name, {}, {:class => :collection, :multiple => false}
    %br
    %span.description Program being audited
-else
  =f.hidden_field :program_id

.row-fluid
  =wrapped_text_field f, :span3, :title, :placeholder => 'Enter title', :label_name => 'Audit Title', :value => f.object.program.nil? ? '' : "#{f.object.program.title} Audit / #{Date.today.year}"
  =wrapped_text_field f, :span2, :audit_firm, :placeholder => '', :label_name => 'Audit Firm'
  =wrapped_text_field f, :span2, :audit_lead, :placeholder => '', :label_name => 'Audit Contact'
  =wrapped_date_field f, :span2, :start_at, :class => 'date', :label_name => 'Audit Start Date', :placeholder => 'MM/DD/YYYY', :value => Time.zone.now.strftime('%m/%d/%Y')
  .span3
    =f.label :complete
    =f.check_box :complete, :class => :check_box
    %span.description Was this audit cycle completed?

.row-fluid
  =wrapped_text_area f, :span12, :description, :class => 'double wysihtml5', :placeholder => 'Enter description here', :label_name => 'Description (Optional)', :wrapper_div_class => 'wysiwyg-area'

%br

=render :partial => "shared/wysihtml5"
