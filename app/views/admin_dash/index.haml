        %a{ :'data-toggle' => 'modal-ajax-form', :'data-modal-reset' => 'reset', :href => new_flow_account_path }
          Account
      %li
        %a{ :'data-toggle' => 'modal-ajax-form', :'data-modal-reset' => 'reset', :href => new_flow_person_path }
