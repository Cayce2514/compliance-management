    %input#control-title.span12{:placeholder => "", :type => "text", :name => "control[title]", :value => f.object.title, :class => (f.object.errors.empty? ? "" : (f.object.errors[:title].empty? ? "forminputsuccess" : "forminputfail"))}
    %span.help-inline
      -f.object.errors[:title].each do |error|
        %span Title #{error}

