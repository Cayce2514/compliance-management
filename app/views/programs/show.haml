-@title = "CMS Program: #{@program.title}"

-content_for :header do
  %ol#breadcrumb
    %li=link_to 'PROGRAMS', programs_dash_path
    %li=@program.slug
  .location#pageTitle=@program.title

-content_for :subheader_extras do
  %h1.fltrt.highlighted Program

.row-static
  .doubleColumn
    .doubleWide.fullHeight
      =render :partial => 'programs/controls',
              :layout => 'layouts/widget_box',
              :locals => { :program => @program }
  .singleColumn
    .singleWide.halfHeight
      =render :partial => 'programs/show',
              :layout => 'layouts/widget_box',
              :locals => { :program => @program }
    .singleWide.halfHeight
      =render :partial => 'programs/audit_cycles',
              :layout => 'layouts/widget_box',
              :locals => { :program => @program }

#edit-program-modal.modal.hide.fade
  =form_for @program, :url => flow_program_path(@program), :method => :put, :remote => true, :html => {:class => :form} do |f|
    .modal-header
      %a.close{"data-dismiss" => "modal"} x
      %h1 Create a new program
    .modal-body
      =render :partial => 'programs/form',
              :locals  => { :f => f }
    .modal-footer
      =f.submit pat(:save)
      =f.submit pat(:cancel), :type => 'reset'
