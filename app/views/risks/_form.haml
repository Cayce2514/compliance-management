-content_for :modal_title do
  -if f.object.new_record?
    Create a new risk
  -else
    Edit risk

-content_for :modal_help, 'risk_form'

-if !f.object.new_record?
  -content_for :modal_delete_path, delete_flow_risk_path(f.object)

.row-fluid
  =wrapped_text_field f, :span6, :title, :placeholder => 'Enter title'
  .span6
    .row-fluid
      =wrapped_text_field f, :span6, :slug, :label_name => 'Code (autofill)', :placeholder => 'RISK-XXXX'
.row-fluid
  =wrapped_text_area f, :span6, :description, :class => 'double wysihtml5', :placeholder => 'Enter description here'
  .span6
    .row-fluid
      =wrapped_date_field f, :span6, :start_date, :class => 'date', :label_name => 'Effective Date', :placeholder => 'MM/DD/YYYY'
      =wrapped_date_field f, :span6, :stop_date, :class => 'date', :label_name => 'Stop Date', :placeholder => 'MM/DD/YYYY'

  =wrapped_text_field f, :span6, :url, :label_name => 'Direct URL for Product (optional)', :placeholder => 'http://www.example.com/'

%br

.row-fluid
  .span6
    .row-fluid
      .span6
        =f.label :likelihood
      .span6
        =f.select :likelihood_rating, Risk::RATINGS.map { |k, v| ["#{k} - #{v}", k] }
    =f.text_area :likelihood, :class => 'span12 double wysihtml5', :placeholder => ''
    =wrapped_text_area f, :span12, :threat_vector, :class => 'double wysihtml5', :placeholder => '', :label_name => "Threat Vector"
    =wrapped_text_area f, :span12, :trigger, :class => 'double wysihtml5', :placeholder => '', :label_name => "Trigger/Immediate /Proximate Cause"
    =wrapped_text_area f, :span12, :preconditions, :class => 'double wysihtml5', :placeholder => '', :label_name => "Pre-conditions / Contributory Causes"

  .span6
    .row-fluid
      .span6
        =f.label :financial_impact, "Company-wide Financial Impact"
      .span6
        =f.select :financial_impact_rating, Risk::RATINGS.map { |k, v| ["#{k} - #{v}", k] }
    =f.text_area :financial_impact, :class => 'span12 double wysihtml5', :placeholder => ''

    .row-fluid
      .span6
        =f.label :reputational_impact, "Company-wide Reputational Impact"
      .span6
        =f.select :reputational_impact_rating, Risk::RATINGS.map { |k, v| ["#{k} - #{v}", k] }
    =f.text_area :reputational_impact, :class => 'span12 double wysihtml5', :placeholder => ''

    .row-fluid
      .span6
        =f.label :operational_impact, "Company-wide Operational Impact"
      .span6
        =f.select :operational_impact_rating, Risk::RATINGS.map { |k, v| ["#{k} - #{v}", k] }
    =f.text_area :operational_impact, :class => 'span12 double wysihtml5', :placeholder => ''

=render :partial => "shared/wysihtml5"

