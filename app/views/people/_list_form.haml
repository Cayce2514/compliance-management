-content_for :modal_buttons do
  %input.ui-corner-all.widgetsearch{ :type => 'text', :placeholder => 'Search' }

-content_for :modal_title do
  %h1 Add Person
  %h3 Select a person

.row-fluid
  .span6
    %script{ :type => 'text/html', :data => { :name => '', :username => '' }}
      %li{ :'data-id' => '<%= id %>' }
        %a.btn.referenceItem{ :href => '#', :data => { :id => '<%= id %>', :name => '<%= name %>', :username => '<%= username %>' }}
          %i.gcmsicon-gears-black
          %a{:href => "#", :'data-toggle' => 'list-remove'}
            .circle.fltrt
              %i.gcmssmallicon-dash-white

          %strong <%= name %>
          %span <%= username %>
          %input(type='hidden' name='items[<%= id %>][id]' value='<%= id %>')
          %select(name="items[<%= id %>][role]")
            %option(value='none') None
            %option(value='owner') Owner

    %ul.nav.nav-tabs.nav-stacked.itemlist.personList#listObjectPersonList
      -@object.object_people.each do |object_person|
        -person = object_person.person
        %li{ :'data-id' => person.id }
          %a.btn.referenceItem{:href => '#', :data => { :id => person.id, :name => person.name, :username => person.username, :role => object_person.role }}
            %i.gcmsicon-gears-black
            %a{:href => "#", :'data-toggle' => 'list-remove'}
              .circle.fltrt
                %i.gcmssmallicon-dash-white
            %strong=person.name
            %span=person.username
            %input(type='hidden' name="items[#{person.id}][id]" value="#{person.id}")
            %select(name="items[#{person.id}][role]")
              %option(value='none'){ :selected => object_person.role.nil? } None
              %option(value='owner'){ :selected => object_person.role == 'owner' } Owner


  .span6
    %a{ :href => new_flow_person_path, :'data-toggle' => 'modal-ajax-listnewform', :'data-list-target' => '#listPersonList' }
      New

    %script{ :type => 'text/html' }
      %li
        %a.btn.referenceItem{ :'data-toggle' => 'list-select', :href => '#', :data => { :id => '<%= id %>', :name => '<%= name %>', :username => '<%= username %>' }}
          %i.gcmsicon-gears-black
          %strong <%= name %>
          %span <%= username %>

    %ul.nav.nav-tabs.nav-stacked.itemlist.personList#listPersonList{ :'data-list-href' => list_flow_people_path(:format => 'json'), :'data-list-target' => '#listObjectPersonList'}
      -@people.each do |person|
        %li
          %a.btn.referenceItem{:'data-toggle' => 'list-select', :href => '#', :data => { :id => person.id, :name => person.name, :username => person.username }}
            %i.gcmsicon-gears-black
            %strong=person.name
            %span=person.username
