<div class="row-fluid">
  <a href="javascript://">
    {{withclass 'selected:selected span10 slot regulationslot toggle selector collapsed oneline'}}
    <i class="grcicon-ok slct"></i>
    <strong class="prefix">{{slug}}</strong>
    {{firstnonempty title description_inline}}
  </a>

  <a data-placement="right" data-popover-trigger="sticky-hover" data-original-title="Linked Controls" data-content="{{render '/assets/controls/list_popover.mustache' linked_controls}}">
    {{{withattr 'href' '/mapping_section/dialog/\{\{id\}\}'}}}
    {{{withclass 'attached badge controllistRM status linked_controls:badge-warning !linked_controls:na:badge-warning !linked_controls:!na:badge-important'}}
    {{#if linked_controls.length}}}
      {{{linked_controls.length}}}
    {{else}}
        {{#if na}}
          N/A
        {{else}}
          0
        {{/if}}
    {{/if}}
  </a>
</div>
{{#if children}}
  <div class="item-content in">
    <ul class="tree-structure" id="children_{{slug}}">
      {{#children}}
        <li id="content_{{slug}}" {{data 'model'}} data-model="true">
          {{> /assets/sections/slug_node.mustache}}
        </li>
      {{/children}}
    </ul>
  </div>
{{/if}}
