.row-fluid
  .span12.control-group
    %label.cleanlabel{:for => "control-description"} Description
    %textarea.span12#control-description{:placeholder => "", :name => "control[description]", :class => (f.object.errors.empty? ? "" : (f.object.errors[:description].empty? ? "forminputsuccess" : "forminputfail"))}=f.object.description
    %span.help-inline
      -f.object.errors[:description].each do |error|
        %span Description #{error}

