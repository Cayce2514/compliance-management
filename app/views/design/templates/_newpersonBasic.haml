#basicnewpersonModal.modal.hide.fade
  .modal-header
    %nav
      %a.widgetbtn{"data-toggle" => "modal", :href => "#comingsoonModal"}
        %i.gcmsicon-questionmark-grey
      %a.widgetbtn{"data-dismiss" => "modal", :href => "#"}
        %i.gcmsicon-x-grey
    %h1 Create New Person
  .modal-body
    %form.form-inline
      .row-fluid
        .span3.control-group
          %label{:for => "inputError"} Name
          %input#inputError.span12.forminputsuccess{:placeholder => "Enter Name", :type => "text"}/
          %br/
          %span.help-inline
        .span3.control-group
          %label{:for => "inputError"} Email
          %input#inputError.span12.forminputsuccess{:placeholder => "e.g.: name@company.com", :type => "text"}/
          %br/
          %span.help-inline
        .span3.control-group
          %label{:for => "select01"} Language
          %br/
          .controls
            %select#select01.inputtext-small
              %option English
              %option 2
              %option 3
              %option 4
              %option 5
          %br/
          %span.help-inline
        .span3.control-group
          .controls.fltrt
            %label{:for => "select02"} Status
            %br/
            %select#select02.inputtext-small
              %option Deprecated
              %option 2
              %option 3
              %option 4
              %option 5
          %br/
          %span.help-inline
      .row-fluid
        .span12.control-group
          %label{:for => "inputError"} Company
          %input#inputError.span12.forminputsuccess{:placeholder => "Enter Company Name", :type => "text"}/
          %br/
          %span.help-inline
  .modal-footer
    .row-fluid
      %nav.fltlft.txtlft.span3
        %a.btn-large.btn-info{"data-dismiss" => "modal", :href => "#comingsoonModal"} Cancel
        %a.btn-large.btn-warning{"data-dismiss" => "modal", :href => "#comingsoonModal"} Delete
      .toolbar-widget.span6
        %a.btn{:href => "#comingsoonModal"}
          %i.gcmsicon-arrowleft-black
        %span.btnwell Showing Most Recent of 3 Revisions
        %a.btn{:href => "#comingsoonModal"}
          %i.gcmsicon-arrowright-black
      %nav.fltrt.txtrt.span3
        %a.btn-large.btn-success{"data-dismiss" => "modal", :href => "#comingsoonModal"} Save
        / <a href="#comingsoonModal" class="btn-large btn-success" data-dismiss="modal">I Approve</a>
