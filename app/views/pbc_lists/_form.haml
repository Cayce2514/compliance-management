-content_for :modal_title do
  -if f.object.new_record?
    Create a new PBC list
  -else
    Edit PBC list

-if !f.object.new_record?
  -content_for :modal_delete_path, delete_flow_pbc_list_path(f.object)

.row-fluid
  .span3
    %label Audit Cycle
    .item=f.object.audit_cycle.program.title
    =f.hidden_field :audit_cycle_id
  =wrapped_text_field f, :span3, :title, :placeholder => 'Enter title', :label_name => 'PBC List Title'
  =wrapped_text_field f, :span2, :audit_firm, :placeholder => '', :label_name => 'Audit Firm'
  =wrapped_text_field f, :span2, :audit_lead, :placeholder => '', :label_name => 'Audit Contact'
  =wrapped_date_field f, :span2, :list_import_date, :class => 'date', :placeholder => 'MM/DD/YYYY', :label_name => 'List Import Date'

.row-fluid
  =wrapped_text_area f, :span12, :description, :class => 'double wysihtml5', :placeholder => 'Enter description here', :label_name => 'Description (Optional)', :wrapper_div_class => 'wysiwyg-area'

%br

=render :partial => "shared/wysihtml5"
