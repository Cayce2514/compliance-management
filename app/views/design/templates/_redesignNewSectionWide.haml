#redesignNewSectionWide.modal.modal-wide.hide.fade
  .modal-header
    %nav
      %a.widgetbtn{"data-toggle" => "modal", :href => "#comingsoonModal"}
        %i.gcmsicon-questionmark-grey
      %a.widgetbtn{"data-dismiss" => "modal", :href => "#"}
        %i.gcmsicon-x-grey
    %h1 
      New/Edit Section
      %span.version v.0.23

  .modal-body
    .alert.alert-info
      %span#alertMessage
      / %button.close{:type => "button", :"data-dismiss" => "alert"} Ã—
    %form
      .row-fluid
        .span4
          %label Title
          %input.span12{:type => "text", :placeholder => "Enter title"}
          %span.help-inline 
        .span2
          %label Program
          %select.span12
            %option Program Title 1
            %option Program Title 2
            %option Program Title 3
        .span6
          .row-fluid
            .span6
              %label Code (optional)
              %input.span12{:type => "text", :placeholder => "Autofill code"}
            .span6
              %label Version
              %input.span12{:type => "text", :placeholder => "1.1.1"}
      .row-fluid
        .span6
          %label Description
          %textarea.span12.double{:placeholder => "Enter description here", :rows => "3"}
        .span6
          .row-fluid 
            .span6
              %label Effective Date
              %input.span12#datepicker-section-effectivedate.date{:type => "text",  :placeholder => "MM/DD/YYYY"}
              :javascript
                $('#datepicker-section-effectivedate').datepicker();
              %label Type
              %select.span12
                %option Regulation
                %option Company
            .span6
              %label Stop Date    
              %input.span12#datepicker-section-stopdate.date{:type => "text",  :placeholder => "MM/DD/YYYY"}
              :javascript
                $('#datepicker-section-stopdate').datepicker();
              %label Kind 
              %select.span12
                %option Not Applicable
      .row-fluid
        .span3
          %label Organization
          %input.span12{:type => "text", :placeholder => "Organization for this program"}
          %span.help-inline &nbsp;
        .span3
          %label Direct Link
          %input.span12{:type => "text", :placeholder => "http://www.examplelink.com/"}
          %span.help-inline &nbsp;
        
        .span6


  =render :partial => 'design/templates/modalfooter'