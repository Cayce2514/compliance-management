%ul.slugtree{:data => { :href => mapping_sections_path(@program, :format => :html)}}
  -if sections.empty?
    Nothing found.
  =walk_slug_tree(Program.slugtree(sections)) do |section, step|
    .item
      %div
        =link_to mapping_selected_section_path(section), :remote => true, :method => :post, :class => :selector do
          %h3=section.slug
          %p=section.title
      -controls = section.linked_controls
      %ul.attached{ :title => controls.map(&:slug).join(", ") }
        -controls.each do |control|
          %li
            %a{ :href => flow_control_path(control.id), :data => { :'popover-href' => mapping_section_tooltip_path(section)} }
              =control.slug
        -if controls.empty?
          %li N/A
      .content
        =section.description
