-model_name = controller_name.singularize
-model_title = controller_name.singularize.titleize
-instance = instance_variable_get("@" + model_name)
-content_for :widget_title do
  Risks associated with this Attribute

-content_for :widget_help, "#{model_name}_main"

-content_for :widget_id, "#{model_name}_main_widget"

-content_for :widget_buttons do
  .filter
    .row-fluid
      .span12
        .pull-right
          %a.widgetbtn.btn.btn-mini{ :href => list_edit_flow_risk_risky_attributes_path(:risky_attribute_id => risky_attribute.id), :'data-toggle' => 'modal-ajax-relationship-selector', :'data-modal-reset' => 'reset', :'data-list-target' => 'refresh', :rel => 'tooltip', :'data-placement' => 'left', :title => 'Link risks to this attribute', :'data-modal-class' => 'modal-wide' }
            %i.grcicon-link-new

%ul.slotlist
  -risks.each_with_index do |risk, i|
    -id_prefix = "risk-#{i}"
    -summary_toggle_target = "#{id_prefix}-summary"

    %li
      .row-fluid
        .slot.span12.processslot
          .slottitle.span8.toggle{"data-target" => "##{summary_toggle_target}", "data-toggle" => "collapse"}
            .expander
            %span.prefix=risk.slug
            =risk.title
          -if has_feature? :BETA
            .slotcolumn.span2
              .halfopacity.span12.nominheight.btn.btn-slotcolumn Data Integrity
            .slotowner.span1
              %a.slotowner{:href => "#"} Owner Joe
          -else
            .span3{"data-target" => "##{summary_toggle_target}", "data-toggle" => "collapse"}
          .slotactions.pull-right
            %a.btn.btn-mini.btn-blue.halfopacity{ "data-target" => "##{summary_toggle_target}", "data-toggle" => "collapse", "rel" => "tooltip", "data-placement" => "left", "title" => "More" }
              %i.grcicon-more

      .row-fluid.collapse{ :id => summary_toggle_target }
        .span12.morewell.statusblue.nominheight
          .slotcontent.span12
            %ul.contentactions.pull-right
              %li
                %a.btn.btn-mini.halfopacity{ "rel" => "tooltip", "data-placement" => "left", "title" => "Go to this object's page", :href => flow_risk_path(risk.id) }
                  %i.grcicon-goto
            =risk.description

