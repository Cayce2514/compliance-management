-# responses = request.responses

-new_response_id = "request-#{request.id}-response-new"
-response_list_id = "request-#{request.id}-responses"

%h4.pbc-title.response-title-bar.pull-left
  ="Responses (#{request.type_name})"
%a.btn.btn-mini.btn-add{"data-toggle" => "modal", :href => "#newResponse"}
  %i.grcicon-add-new{ "data-target" => "##{new_response_id}", "data-toggle" => "collapse", "rel" => "tooltip", "data-placement" => "left", "title" => "Add new response" }

%ul.items-list.collapse{ :id => new_response_id }
  %li.item
    .row-fluid
      .span4.pbc-add-response
        %a#tooltip11.btn.btn-mini.pull-right{ :href => new_flow_system_path, :'data-toggle' => 'modal-ajax-form', :'data-modal-reset' => 'reset', :'data-modal-class' => 'modal-wide', "rel" => "tooltip", "data-placement" => "top", "title" => "Add new response" }
          %i.grcicon-add
        %input.pbc-system-search{:type => "text", :placeholder => "Type to search systems/processes"}
      .span1

      .span3
        %span.pbc-counter.empty
          %i.grcicon-person
          0
      .span3
        %span.pbc-counter.empty
          %i{ :class => request_type_icon(request.type_name) }
          0
      .span1
        &nbsp;
%ul.tree-structure.items-list.pbc-responses{ :id => response_list_id }