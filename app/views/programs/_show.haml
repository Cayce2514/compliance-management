-content_for :widget_title do
  Program Info

-content_for :widget_help, 'program_info'

-content_for :widget_id, 'program_info_widget'

%ul.info-list
  %li.float-element
    %label
      Code
    %span
      =program.slug
  %li.float-element
    %label
      Kind
    %span
      =program.kind && program.kind.title
  %li.float-element
    %label
      Full Title
    %span
      =program.title
  %li
    %label
      Description
    %span
      =display_as_html program.description

%ul.tree
  %li.category
    =render :partial => 'documents/object_list',
            :locals  => { :object => program }
  %li.category
    =render :partial => 'people/object_list',
            :locals  => { :object => program }

%section.footer
  .row-fluid
    .span6
      %p.footer-left
        Created: #{program.created_at.strftime("%m/%d/%y")}
    .span6
      %p.footer-right
        Updated: #{program.updated_at.strftime("%m/%d/%y")}
