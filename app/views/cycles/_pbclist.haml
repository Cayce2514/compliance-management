-content_for :widget_title do
  PBC Lists

-content_for :widget_help, 'cycle_pbclist'

-content_for :widget_buttons do
  %a.widgetbtn{ :href => new_flow_pbc_list_path(:'pbc_list[audit_cycle_id]' => cycle.id), :'data-toggle' => 'modal-ajax-form', :'data-modal-reset' => 'reset', :'data-form-target' => 'redirect', :'data-modal-class' => 'modal-wide'}
    %i.grcicon-add

.item-titles
  .row-fluid
    .span3
      Date
    .span4
      Firm
    .span5
      PBC Title

-cycle.pbc_lists.each do |pbc_list|
  %a.item-link{ :href => flow_pbc_list_path(pbc_list.id) }
    .item
      .row-fluid
        .span3=pbc_list.list_import_date && pbc_list.list_import_date.strftime('%m/%d/%Y')
        .span4=pbc_list.audit_firm
        .span5=pbc_list.title
