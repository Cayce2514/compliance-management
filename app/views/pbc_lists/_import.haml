-content_for :widget_title do
  Import PBC list

-content_for :widget_help, 'pbc_list_import'

.import

  =form_tag '', :class => 'import', :multipart => true, :remote => true, :'data-type' => 'html', :'data-update-target' => '#results-container' do

    %label(for="file")
      %strong
        File to Upload
    =file_field_tag "Upload"
    =submit_tag "Upload and Review", :class => 'btn btn-primary'
    -if CMS_CONFIG["PBC_LIST_IMPORT_HELP_LINK"].present?
      %a{ :href => CMS_CONFIG["PBC_LIST_IMPORT_HELP_LINK"], :target => '_blank', :class => "import-help"}
        View Help

  #results-container
