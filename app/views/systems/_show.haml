-content_for :widget_title do
  System Information

-content_for :widget_help, 'system_info'

-content_for :widget_buttons do
  %a.widgetbtn{:href => edit_flow_system_path(system), :'data-toggle' => 'modal-ajax-form', :'data-modal-reset' => 'reset', :title => 'Edit System'}
    %i.gcmsicon-lock-grey

.nav.nav-tabs.nav-stacked
  =system.title

  .item
    Created:
    =display_time(system.created_at)
  .item
    Updated:
    =display_time(system.updated_at)

%hr

.row-fluid
  .span12#referenceList
    =render :partial => 'documents/object_list',
            :locals  => { :object => system }

%hr

.row-fluid
  .span12#peopleList
    =render :partial => 'people/object_list',
            :locals  => { :object => system }
