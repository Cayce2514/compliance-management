-# locals: object

%h3
  People
  %a.btn.btn-blue.addbtn.fltrt{:href => list_edit_flow_object_people_path(:object_type => object.class.name, :object_id => object.id), :'data-toggle' => 'modal-ajax-relationship-selector', :'data-modal-reset' => 'reset', :'data-list-target' => '#personList', :'data-modal-class' => 'modal-wide' } Edit List

%script{ :type => 'text/html', :data => { :person => '', :role => '' }}
  %li.controlSlot{ :'data-id' => '<%= person.id %>' }
    .controls-group
      %a.widgetbtn.fltrt{ :href => flow_people_path + '/<%= person.id %>/edit', :'data-toggle' => 'modal-ajax-form', :'data-modal-reset' => 'reset', :'data-form-target' => 'refresh' }
        %i.gcmsicon-edit-grey
      .controls-type <%= role %>
      .controls-subgroup <%= person.name || '&nbsp' %>

%ul#personList
  -object.object_people.all.each do |object_item|
    -item = object_item.person
    %li.controlSlot{ :'data-id' => item.id }
      .controls-group
        %a.widgetbtn.fltrt{ :href => edit_flow_person_path(item), :'data-toggle' => 'modal-ajax-form', :'data-modal-reset' => 'reset', :'data-form-target' => 'refresh' }
          %i.gcmsicon-edit-grey
        .controls-type=object_item.role
        .controls-subgroup=item.name || '&nbsp;'.html_safe
