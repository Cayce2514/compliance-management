-model_name = controller_name.singularize
-model_title = model_name.titleize
-instance = instance_variable_get("@" + model_name)

-content_for :widget_title do
  #{model_title} Information

-content_for :widget_help, "#{model_name}_info"

.information.information-common
  .toolbar-widget

  %hr.hr-widget

  .row-fluid
    .span8
      %label Title
      %span.info-item=instance.title
    .span4
      %label Code
      %span.info-item=instance.slug

  .row-fluid
    .span12
      %br
      %label Description
      =display_as_html instance.description

%hr.hr-widget

.row-fluid
  .span12
    =render :partial => 'documents/object_list',
            :locals  => { :object => instance }

%hr.hr-widget

.row-fluid
  .span12
    =render :partial => 'people/object_list',
            :locals  => { :object => instance }

%hr.hr-widget

.row-fluid
  .span6.nominheight
    %label.fltlft
      %strong> Created: #{instance.created_at.strftime("%m/%d/%y")}
  .span6.nominheight
    %label.fltrt
      %strong> Updated: #{instance.updated_at.strftime("%m/%d/%y")}
