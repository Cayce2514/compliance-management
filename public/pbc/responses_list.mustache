  {{#list}}
  <li class="item i-process" {{data 'model'}} data-model="true" data-id="{{id}}">
    <div class="row-fluid" data-target="#pbc-response-{{id}}" data-toggle="collapse">
      <div class="span4">
        Response using Process:
        {{system.title}}
      </div>
      <div class="span1">
        <span class="pbc-counter{{^system.object_people.length}} empty{{/system.object_people.length}}">
          <i class="grcicon-person"></i>
          {{system.object_people.length}}
        </span>
      </div>
      <div class="span1">
        {{#if_equals type_name 'Documentation'}}
        <span class="pbc-counter{{^system.object_documents.length}} empty{{/system.object_documents.length}}">
          <i class="grcicon-document"></i>
          {{system.object_documents.length}}
        </span>
        {{/if_equals}}
        {{#if_equals type_name 'Population Sample'}}
        <span class="pbc-counter empty">
          <i class="grcicon-populationsample"></i>
          0
        </span>
        {{/if_equals}}
        {{#if_equals type_name 'Interview'}}
        <span class="pbc-counter empty">
          <i class="grcicon-calendar"></i>
          0
        </span>
        {{/if_equals}}
      </div>
      <div class="span5">
        &nbsp;
      </div>
      <div class="span1 pbc-item pbc-actions">
        <a class="btn btn-mini" rel="tooltip" data-placement="left" title="More" data-target="#pbc-response-{{id}}" data-toggle="collapse" href="javascript://">
          <i class="grcicon-more"></i>
        </a>
      </div>
    </div>
    <div id="pbc-response-{{id}}" class="row-fluid collapse">
      {{#system}}
        {{> /pbc/system.mustache}}
      {{/system}}

      <div class="span4 pbc-response-info">
        <div class="row-fluid">
          <div class="span12">Response Info
          </div>
        </div>
        <div class="row-fluid">
          <div class="span11">
            <label>
              <strong>{{type_name}}</strong>
            </label>
            <ul class="pbc-item-list">
              {{#if_equals type_name 'Documentation'}}
              {{#system.object_documents}}
              <li {{data 'model'}} data-model="true" title="{{document.link_url}}">
                <a class="btn btn-nano pull-right remove_document" href="javascript://">
                  <i class="grcicon-x-grey"></i>
                </a>
                <a href="{{document.link_url}}" target="_blank">{{document.title}} {{^document.title}}{{document.link_url}}{{/document.title}}</a>
                (<select class="edit-document-role">
                  <option value="general" {{#if_equals role 'general'}}selected="true"{{/if_equals}}>General Doc</option>
                </select>)
              </li>
              {{/system.object_documents}}
              <li class="inline-editing inline-add-document hide" data-system-id="{{system.id}}">
                <form>
                  <div class="row-fluid">
                    <div class="span10">
                      <input class="span12 input-title" name="title" placeholder="Doc title or URL" type="text" {{ (el) -> el.pbc_autocomplete_documents() }}>
                    </div>
                    <div class="span2">
                      <a class="btn btn-mini span12 add-document" data-modal-reset="reset" data-toggle="modal-ajax-form" href="/documents/new" data-target="#ajax-modal-documents-new">
                        <i class="grcicon-add"></i>
                      </a>
                    </div>
                  </div>
                </form>
              </li>
              <li class="toggle-add-document add-new">
                <a href="javascript://">
                  Add new document
                </a>
              </li>
              {{else}}
              <li class="add-new">
                <a class="disabled" href="javascript://">
                  Add new {{type_name}}
                </a>
              </li>
              {{/if_equals}}
            </ul>
          </div>
          <div class="span1 pbc-item pbc-actions">
            <a class="btn btn-mini delete-response" href="/responses/{{id}}/delete" data-toggle="modal-ajax-form" title="Delete response" rel="tooltip" data-placement="left" data-id="{{id}}">
              <i class="grcicon-x-grey"></i>
            </a>
          </div>
        </div>
      </div>
    </div>
  </li>
  {{/list}}
