-content_for :widget_title do
  Systems that rely on this System

-content_for :widget_help, 'system_super_systems'

-content_for :widget_buttons do
  %input.ui-corner-all.widgetsearch.clear-value(type='text' placeholder='Search')

.description
  .content
    -system.super_systems.all.each do |item|
      %div
        %span.prefix
          =item.slug
        =item.title
      -if !item.description.blank?
        %textarea(disabled='disabled')
          =item.description
