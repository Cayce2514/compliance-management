.popover-title
  %h3 #{@section.meta_kind.to_s.titleize} Information

.popover-content
  =@section.title
  \|
  =@section.slug

  %h3 Description

  .item
    =display_as_html @section.description

  .item
    Created:
    =display_time(@section.created_at)
  .item
    Updated:
    =display_time(@section.updated_at)
