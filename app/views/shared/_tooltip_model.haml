-model_name = controller_name.singularize.underscore
-model_title = model_name.titleize
-instance = instance_variable_get("@" + model_name)

-content_for :tooltip_title do
  %h3
    #{model_title} Info

.row-fluid
  .span12
    %h3
      %i{:class => "grcicon-#{model_name}-black"}
      =instance.slug
      %span=instance.title

.row-fluid
  .span12
    %h4 Description
    -if instance.description != ""
      =display_as_html instance.description
    -else
      .rtf
        %p.no-data No description available

.row-fluid
  .span6.created
    %strong Created:
    =display_time(instance.created_at)
  .span6.updated
    %strong Updated:
    =display_time(instance.updated_at)