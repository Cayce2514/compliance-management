-if @controls.empty?
  .no-results
    No results found
-else
  %ul.nav.nav-tabs.nav-stacked
    -@controls.each do |control|
      %li.group
        %a{ :href => flow_control_path(control), :'data-popover-href' => tooltip_flow_control_path(control), :'data-popover-trigger' => 'sticky-hover' }
          %h3=control.slug
          %p.oneline
            %strong=control.title
            &nbsp;
            =raw control.description
