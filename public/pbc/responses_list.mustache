  {{#list}}
  <li class="item i-process" {{data 'model'}} data-model="true" data-id="{{id}}">
    <div class="row-fluid">
      <div class="span5">
        {{system.title}}
      </div>
      <div class="span3">
        <span class="pbc-counter">
          <i class="grcicon-person"></i>
          {{system.object_people.length}}
        </span>
      </div>
      <div class="span3">
        <span class="pbc-counter">
          <i class="grcicon-document"></i>
          {{system.object_documents.length}}
        </span>
      </div>
      <div class="span1 pbc-item pbc-actions">
        <a class="btn btn-mini" rel="tooltip" data-placement="left" title="More" data-target="#pbc-response-{{id}}" data-toggle="collapse" href="javascript://">
          <i class="grcicon-more"></i>
        </a>
      </div>
    </div>
    <div id="pbc-response-{{id}}" class="row-fluid collapse">
      <div class="span5">
        <label>
          <strong>Process Description</strong>
        </label>
        <p class="full-view">
          {{{system.description}}}
        </p>
        <label>
          <strong>Process Notes</strong>
        </label>
        <p class="full-view">
          {{system.notes}}
        </p>
      </div>
      <div class="span3">
        <label>
          <strong>People</strong>
        </label>
        <ul class="pbc-item-list">
          {{#system.object_people}}
          <li {{data 'model'}} data-model="true">
            <a class="btn btn-nano pull-right edit_person" href="javascript://">
              <i class="grcicon-edit-grey"></i>
            </a>
            <a href="javascript://" class="edit-person">{{person.name}} {{#role}}({{.}}){{/role}}</a>
          </li>
          {{/system.object_people}}
          <li data-system-id="{{system.id}}">
            <a class="add-person btn btn-mini pull-right" data-list-target="#referenceList" data-modal-class="modal-slim" data-modal-reset="reset" data-toggle="modal-ajax-single-selector" href="/people?list_select=1">
              <i class="grcicon-link"></i>
            </a>
              <a class="add-person" data-list-target="#referenceList" data-modal-class="modal-slim" data-modal-reset="reset" data-toggle="modal-ajax-single-selector" href="/people?list_select=1">
              Add new person
            </a>
          </li>
        </ul>
      </div>
      <div class="span3">
        <label>
          <strong>Documents</strong>
        </label>
        <ul class="pbc-item-list">
          {{#system.object_documents}}
          <li {{data 'model'}} data-model="true">
            <a class="btn btn-nano pull-right" href="javascript://">
              <i class="grcicon-edit-grey"></i>
            </a>
            <a href="javascript://">{{document.title}}</a>
          </li>
          {{/system.object_documents}}
          <li data-system-id="{{system.id}}">
            <a class="add-document btn btn-mini pull-right" data-list-target="#referenceList" data-modal-class="modal-slim" data-modal-reset="reset" data-toggle="modal-ajax-single-selector" href="/documents?list_select=1">
              <i class="grcicon-link"></i>
            </a>
            <a class="add-document" data-list-target="#referenceList" data-modal-class="modal-slim" data-modal-reset="reset" data-toggle="modal-ajax-single-selector" href="/documents?list_select=1">
              Add new document
            </a>
          </li>
        </ul>
      </div>
      <div class="span1 pbc-item pbc-actions">
        <a class="btn btn-mini system-edit" data-toggle="modal-ajax-form" href="/systems/{{system.id}}/edit" data-modal-reset="reset" data-model-class="modal-wide" title="Edit System">
          <i class="grcicon-edit-grey"></i>
        </a>
        <a class="btn btn-mini" href="/systems/{{system.id}}">
          <i class="grcicon-arrowright-grey"></i>
        </a>
        <a class="btn btn-mini" href="/responses/{{id}}/delete" data-toggle="modal-ajax-deleteform" title="Delete response" rel="tooltip" data-placement="left">
          <i class="grcicon-x-grey"></i>
        </a>
      </div>
    </div>
  </li>
  {{/list}}
