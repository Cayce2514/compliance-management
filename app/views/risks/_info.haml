-model_name = controller_name.singularize
-model_title = model_name.titleize
-instance = instance_variable_get("@" + model_name)

-content_for :widget_title do
  #{model_title} Information

-content_for :widget_help, "#{model_name}_info"

-content_for :widget_id, "#{model_name}_info_widget"

%ul.info-list
  %li.float-element
    %label
      Title
    %span
      =instance.title
  %li.float-element
    %label
      Code
    %span
      =instance.slug
  %li.float-element
    %label
      Direct Link
    %span
      =link_to(instance.url,instance.url,:target => "_blank",:class => "inner-element")
  %li
    %label
      Description
    %span
      =display_as_html instance.description

%ul.tree
  %li.category
    =render :partial => 'categories/object_list',
            :locals  => { :object => instance, :scope_id => Control::CATEGORY_TYPE_ID }

  %li.category
    =render :partial => 'documents/object_list',
            :locals  => { :object => instance }

  %li.category
    =render :partial => 'people/object_list',
            :locals  => { :object => instance }

%section.footer
  .row-fluid
    .span6
      %p.footer-left
        Created: #{instance.created_at.strftime("%m/%d/%y")}
    .span6
      %p.footer-right
        Updated: #{instance.updated_at.strftime("%m/%d/%y")}

