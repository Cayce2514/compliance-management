.row-fluid
  .span4.control-group
    .row-fluid
      -#.span4.form-inline.control-group
        %label{:for => "control-program"} Program
        %input#control-program.input-supermini{:name => "program[program]", :placeholder => "SOX", :type => "text"}
        %span.help-inline  Yay a long line this is a test
      .span4.form-inline.control-group
        %label.cleanlabel{:for => "program-slug"} Code
        %input#program-slug.input-supermini{:name => "program[slug]", :placeholder => "SOX", :type => "text", :value => f.object.slug, :class => (f.object.errors.empty? ? "" : (f.object.errors[:slug].empty? ? "forminputsuccess" : "forminputfail"))}
        %span.help-inline
          -f.object.errors[:slug].each do |error|
            %span Short code #{error}
      -#.span4.form-inline.control-group
        %label{:for => "control-version"} Version
        %input#control-version.input-supermini{
          :name => "control[version]", :placeholder => "SOX", :type => "text"}
        %span.help-inline Should be a number!
  .span1
  .span7.control-group.fltrt
    .row-fluid.fltrt
      -#.span4.form-inline.control-group
        %label{:for => "control-effectivedate"} Effective Date
        %input#control-effectivedate.input-small{:placeholder => "12/12/12", :type => "text"}
        %span.help-inline
      -#.span4.form-inline.control-group
        %label{:for => "control-verificationdate"} Category
        %input#control-verificationdate.input-small{:placeholder => "Building", :type => "text"}
        %span.help-inline
      -#.span4.form-inline.control-group.fltrt
        %label{:for => "control-frequency"} Sub-Category
        %input#control-frequency.input-small{:placeholder => "Security", :type => "text"}
        %span.help-inline

%br
.row-fluid
  .span12.control-group
    %label.cleanlabel{:for => "program-title"} Title
    %input#program-title.span12{:placeholder => "SOX", :type => "text", :name => "program[title]", :value => f.object.title, :class => (f.object.errors.empty? ? "" : (f.object.errors[:title].empty? ? "forminputsuccess" : "forminputfail"))}/
    %span.help-inline
      -f.object.errors[:title].each do |error|
        %span=error

%br
.row-fluid
  .span12.control-group
    %label.cleanlabel{:for => "program-description"} Description
    %textarea.span12#program-description{:placeholder => "", :name => "program[description]", :class => (f.object.errors.empty? ? "" : (f.object.errors[:description].empty? ? "forminputsuccess" : "forminputfail"))}=f.object.description
    %span.help-inline
      -f.object.errors[:description].each do |error|
        %span=error

-#.row-fluid
  .span12
    %label Source Document
    =f.fields_for :source_document, f.object.source_document do |b|
      =render "admin/documents/subitem", { :f => b, :document => f.object.source_document }

-#.row-fluid
  .span12
    %label Source Website
    =f.fields_for :source_website, f.object.source_website do |b|
      =render "admin/documents/subitem", { :f => b, :document => f.object.source_website }
